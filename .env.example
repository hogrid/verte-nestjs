# Application
NODE_ENV=development
PORT=3000

# Database (IMPORTANT: Use the SAME database as Laravel!)
DB_HOST=localhost
DB_PORT=5306
DB_DATABASE=verte_production
DB_USERNAME=root
DB_PASSWORD=root

# JWT (Compatible with Laravel Sanctum)
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=3600

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# WAHA (WhatsApp HTTP API)
WAHA_URL=http://localhost:8080
API_WHATSAPP_GLOBALKEY=your-global-key-here

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=APP_USR_your_access_token
MERCADOPAGO_PUBLIC_KEY=APP_USR_your_public_key

# Email
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@verte.com
MAIL_FROM_NAME=Verte

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# Pusher (Optional - for WebSockets)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
